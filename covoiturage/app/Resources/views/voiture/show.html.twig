{% extends 'covoiturageBackOfficeBundle::layout.html.twig' %}

{% block body %}
    <h1>Voiture</h1>

    <table>
        <tbody>
            <tr>
                <th>Voiture</th>
                <td>{{ voiture.voiture }}</td>
            </tr>
            <tr>
                <th>Nbplaces</th>
                <td>{{ voiture.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ voiture.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voiture_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
