{% extends 'covoiturageBackOfficeBundle::layout.html.twig' %}

{% block body %}
    <h1>Trajet</h1>

    <table>
        <tbody>
            <tr>
                <th>Nbkm</th>
                <td>{{ trajet.nbKm }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if trajet.date %}{{ trajet.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminbo_trajet_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('adminbo_trajet_edit', { 'id': trajet.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
