{% extends 'covoiturageBackOfficeBundle::layout.html.twig' %}

{% block body %}
    <h1>Ville</h1>

    <table>
        <tbody>
            <tr>
                <th>Ville</th>
                <td>{{ ville.ville }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ ville.cp }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ville_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('ville_edit', { 'id': ville.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
