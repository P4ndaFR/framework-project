<html>
  <head>
    <title>Trajets</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" crossorigin="anonymous">
  </head>
  <body class='container'>
    <form action="/recherche" method="post" class='inline'>
      Ville:
      <input type='text' name="ville"><br>
      Type:<br>
      <input type='radio' name="type" value="1">Ville de départ<br>
      <input type='radio' name="type" value="0">Ville d'arrivée<br>
      <input type='radio' name="type" value="2">Les 2<br>
      <input type="submit" value="Chercher"><br>
      <a href="/">Tout afficher</a>
    </form>
    <table class='table'>
      {% for item in trajets %}
        <tr><td><b>De</b>: {{ item.ville.ville }}</td><td><b>A</b>: {{ item.ville1.ville }}</td><td><b>Distance</b>: {{ item.nbKm }} km</td><td><b>Conducteur</b>: {{item.internaute.prenom}} {{item.internaute.nom}}</td><td><b>Date</b>: {{ item.date }}</td><td><a href="/trajet/{{item.id}}">Détail</a></td></tr>
      {% endfor %}
    </table>
  </body>
</html>
